#include "corne_cirque_right_shared.dtsi"

/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        glidepoint_split: glidepoint_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
            device = <&glidepoint>;
        };
    };
};

&glidepoint_listener {
    status = "okay";
    device = <&glidepoint_split>;
};
